{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@util/*": ["lib/util/*"],
			"@lib/*": ["lib/*"],
			"@root/*": ["*"]
		},
		"composite": true,
		"declaration": true,
		"sourceMap": true,
		"inlineSources": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"removeComments": true
	},
	"include": [".", "./**/*.json"],
    "exclude": ["./tsconfig.json"]
}
